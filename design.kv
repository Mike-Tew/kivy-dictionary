#:kivy 1.0
<AppLayout>
	canvas.before:
		Color:
			rgba: (10/255, 10/255, 10/255, 1)
		Rectangle:
			pos: self.pos
			size: self.size
	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height
		padding: 20

		Label:
			text: "Dictionary"
			font_size: 50
			size_hint_y: 0.3
			bold: True
			italic: True

		GridLayout:
			cols: 2
			size_hint_y: None

			TextInput:
				id: search_word
				multiline: False
				halign: "right"
				font_size: 30
				size_hint_y: None
				size_hint_x: 1
				height: 50

			Button:
				text: "Search"
				size_hint_x: 0.3
				size_hint_y: None
				height: 50
				on_press: root.dictionary_search()

		TextInput:
			id: display
			size_hint_y: 1
			font_size: 20
