#:kivy 1.0
<AppLayout>
	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height
		GridLayout:
			cols: 1

			Label:
				text: "Dictionary"
				font_size: 32

		GridLayout:
			cols: 2

			TextInput:
				id: search_word
        		halign: "right"
				font_size: 30
				size_hint_y: None
				size_hint_x: None
				width: 500
				height: 50

			Button:
				text: "Search"
				size_hint_x: None
				size_hint_y: None
				width: 100
				height: 50
				on_press: root.dictionary_search()

		TextInput:
			id: display
			size_hint_y: None
			height: 100

